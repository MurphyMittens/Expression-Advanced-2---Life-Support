@name EGP - The Advanced Research Laboratory Of Systematics
@inputs EGP:wirelink
@outputs 
@persist A B
@trigger 

interval(10)

findByClass("Player")
B = abs(findClosest(entity():pos()):pos():distance(entity():pos())-1000)/500

if (findClosest(entity():pos()):pos():distance(entity():pos()) < 1000) {A += B}
else {A = A}

EGP:egpBox(1,vec2(255,255),vec2(360,360))
EGP:egpColor(1,vec(200,35,35))
EGP:egpMaterial(1,"expression 2/cog")
EGP:egpAngle(1,-A)
EGP:egpBox(2,vec2(464,6),vec2(360,360))
EGP:egpColor(2,vec(200,35,35))
EGP:egpMaterial(2,"expression 2/cog")
EGP:egpAngle(2,A)

EGP:egpBox(3,vec2(45,504),vec2(360,360))
EGP:egpColor(3,vec(200,35,35))
EGP:egpMaterial(3,"expression 2/cog")
EGP:egpAngle(3,A)
EGP:egpText(4,"The",vec2(255,190))
EGP:egpSize(4,20)
EGP:egpAlign(4,1,1)
EGP:egpText(5,"Advanced",vec2(255,212))
EGP:egpSize(5,20)
EGP:egpAlign(5,1,1)
EGP:egpText(6,"Research",vec2(255,234))
EGP:egpSize(6,20)
EGP:egpAlign(6,1,1)
EGP:egpText(7,"Laboratory",vec2(255,256))
EGP:egpSize(7,20)
EGP:egpAlign(7,1,1)
EGP:egpText(8,"Of",vec2(255,278))
EGP:egpSize(8,20)
EGP:egpAlign(8,1,1)
EGP:egpText(9,"Systematics",vec2(255,300))
EGP:egpSize(9,20)
EGP:egpAlign(9,1,1)

if (duped()) {selfDestruct()}

